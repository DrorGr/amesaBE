@page "/admin"
@page "/admin/dashboard"
@inject IAdminDatabaseService DatabaseService

<PageTitle>Dashboard - Amesa Admin</PageTitle>

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h1 class="display-5">
                <i class="fas fa-tachometer-alt"></i> Dashboard
            </h1>
            <p class="text-muted">Welcome to the Amesa Admin Panel</p>
        </div>
    </div>

    <div class="alert alert-info mb-4">
        <i class="fas fa-database"></i> 
        <strong>Current Environment:</strong> @DatabaseService.GetCurrentEnvironment()
    </div>

    <div class="row g-4">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    <i class="fas fa-home fa-3x text-primary mb-3"></i>
                    <h5 class="card-title">Admin Panel</h5>
                    <p class="card-text text-muted">Microservices Admin Interface</p>
                </div>
            </div>
        </div>
    </div>
</div>

