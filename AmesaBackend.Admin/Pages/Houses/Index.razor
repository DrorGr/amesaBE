@page "/admin/houses"
@using AmesaBackend.Admin.Services
@using AmesaBackend.Admin.DTOs
@inject IHousesService HousesService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<PageTitle>Houses - Amesa Admin</PageTitle>

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h1 class="display-5">
                <i class="fas fa-home"></i> Houses Management
            </h1>
        </div>
        <div class="col-auto">
            <button class="btn btn-primary" @onclick="NavigateToCreate">
                <i class="fas fa-plus"></i> New House
            </button>
        </div>
    </div>

    <!-- Filters -->
    <div class="card mb-4">
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">Search</label>
                    <input type="text" class="form-control" @bind="searchTerm" @bind:event="oninput" 
                           placeholder="Search by title, location..." />
                </div>
                <div class="col-md-3">
                    <label class="form-label">Status</label>
                    <select class="form-select" @bind="statusFilter">
                        <option value="">All Statuses</option>
                        <option value="Active">Active</option>
                        <option value="Pending">Pending</option>
                        <option value="Upcoming">Upcoming</option>
                        <option value="Inactive">Inactive</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label">Page Size</label>
                    <select class="form-select" @bind="pageSize">
                        <option value="10">10</option>
                        <option value="20">20</option>
                        <option value="50">50</option>
                    </select>
                </div>
                <div class="col-md-3 d-flex align-items-end">
                    <button class="btn btn-secondary w-100" @onclick="LoadHouses">
                        <i class="fas fa-search"></i> Search
                    </button>
                </div>
            </div>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (houses?.Items?.Any() == true)
    {
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Location</th>
                                <th>Price</th>
                                <th>Ticket Price</th>
                                <th>Status</th>
                                <th>Created</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var house in houses.Items)
                            {
                                <tr>
                                    <td>
                                        <strong>@house.Title</strong>
                                        @if (!string.IsNullOrEmpty(house.Description))
                                        {
                                            <br />
                                            <small class="text-muted">@(house.Description.Length > 50 ? house.Description.Substring(0, 50) + "..." : house.Description)</small>
                                        }
                                    </td>
                                    <td>@house.Location</td>
                                    <td>€@house.Price.ToString("N2")</td>
                                    <td>€@house.TicketPrice.ToString("N2")</td>
                                    <td>
                                        <span class="badge bg-@GetStatusBadgeClass(house.Status)">@house.Status</span>
                                    </td>
                                    <td>@house.CreatedAt.ToString("yyyy-MM-dd")</td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <button class="btn btn-outline-primary" @onclick="() => ViewHouse(house.Id)" title="View">
                                                <i class="fas fa-eye"></i>
                                            </button>
                                            <button class="btn btn-outline-secondary" @onclick="() => EditHouse(house.Id)" title="Edit">
                                                <i class="fas fa-edit"></i>
                                            </button>
                                            <button class="btn btn-outline-danger" @onclick="() => DeleteHouse(house.Id)" title="Delete">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                @if (houses.TotalPages > 1)
                {
                    <nav>
                        <ul class="pagination justify-content-center">
                            <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                                <button class="page-link" @onclick="() => ChangePage(currentPage - 1)">Previous</button>
                            </li>
                            @for (int i = 1; i <= houses.TotalPages; i++)
                            {
                                <li class="page-item @(i == currentPage ? "active" : "")">
                                    <button class="page-link" @onclick="() => ChangePage(i)">@i</button>
                                </li>
                            }
                            <li class="page-item @(currentPage == houses.TotalPages ? "disabled" : "")">
                                <button class="page-link" @onclick="() => ChangePage(currentPage + 1)">Next</button>
                            </li>
                        </ul>
                    </nav>
                }

                <div class="text-muted text-center mt-3">
                    Showing @((currentPage - 1) * pageSize + 1) to @(Math.Min(currentPage * pageSize, houses.TotalCount)) of @houses.TotalCount houses
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle"></i> No houses found.
        </div>
    }
</div>

@code {
    private PagedResult<HouseDto>? houses;
    private bool isLoading = true;
    private int currentPage = 1;
    private int pageSize = 20;
    private string? searchTerm;
    private string? statusFilter;

    protected override async Task OnInitializedAsync()
    {
        await LoadHouses();
        
        // Listen for real-time updates
        if (OperatingSystem.IsBrowser())
        {
            // Subscribe to SignalR events via JavaScript interop
            await JSRuntime.InvokeVoidAsync("eval", @"
                window.addEventListener('houseCreated', function(e) {
                    console.log('House created event:', e.detail);
                    // Trigger page refresh
                    window.location.reload();
                });
                window.addEventListener('houseUpdated', function(e) {
                    console.log('House updated event:', e.detail);
                    // Refresh if viewing the updated house
                    if (window.location.pathname.includes(e.detail.houseId)) {
                        window.location.reload();
                    }
                });
                window.addEventListener('houseDeleted', function(e) {
                    console.log('House deleted event:', e.detail);
                    window.location.reload();
                });
            ");
        }
    }

    private async Task LoadHouses()
    {
        isLoading = true;
        try
        {
            houses = await HousesService.GetHousesAsync(currentPage, pageSize, searchTerm, statusFilter);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading houses: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task ChangePage(int page)
    {
        currentPage = page;
        await LoadHouses();
    }

    private void NavigateToCreate()
    {
        Navigation.NavigateTo("/admin/houses/create");
    }

    private void ViewHouse(Guid id)
    {
        Navigation.NavigateTo($"/admin/houses/{id}");
    }

    private void EditHouse(Guid id)
    {
        Navigation.NavigateTo($"/admin/houses/{id}/edit");
    }

    private async Task DeleteHouse(Guid id)
    {
        if (!await ConfirmDelete())
            return;

        try
        {
            await HousesService.DeleteHouseAsync(id);
            await LoadHouses();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error deleting house: {ex.Message}");
        }
    }

    private async Task<bool> ConfirmDelete()
    {
        // Simple confirmation - in production use a proper modal component
        return true; // For now, always confirm
    }

    private string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "Active" => "success",
            "Pending" => "warning",
            "Upcoming" => "info",
            "Inactive" => "secondary",
            _ => "secondary"
        };
    }
}

