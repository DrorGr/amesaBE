<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Amesa Admin Panel</title>
    <base href="/admin/" />
    <link rel="icon" href="data:," />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link href="css/admin.css" rel="stylesheet" />
</head>
<body>
    @RenderBody()

    <div id="blazor-error-ui">
        <environment include="Production">
            An error has occurred. This application may no longer respond until reloaded.
        </environment>
        <environment include="Development">
            An unhandled exception has occurred. See browser dev tools for details.
        </environment>
        <a href="" class="reload">Reload</a>
        <a class="dismiss">ðŸ—™</a>
    </div>

    <script src="_framework/blazor.server.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@@microsoft/signalr@latest/dist/browser/signalr.min.js" 
            onload="window.SignalRLoaded = true; console.log('SignalR library loaded successfully');"
            onerror="console.error('Failed to load SignalR library from CDN');"></script>
    <script>
        // SignalR loading verification - set flag when loaded
        (function() {
            const checkSignalR = setInterval(function() {
                if (typeof SignalR !== 'undefined') {
                    window.SignalRLoaded = true;
                    clearInterval(checkSignalR);
                    console.log('SignalR detected and loaded');
                }
            }, 50);
            
            // Timeout after 10 seconds (increased for slower connections)
            setTimeout(function() {
                clearInterval(checkSignalR);
                if (typeof SignalR === 'undefined' && !window.SignalRLoaded) {
                    console.error('SignalR library failed to load from CDN after 10 seconds');
                }
            }, 10000);
        })();
    </script>
    <script src="js/admin-signalr.js"></script>
</body>
</html>

