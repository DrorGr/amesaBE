@page "/translations"
@inherits AuthorizedPageBase
@using AmesaBackend.Admin.Services
@using AmesaBackend.Admin.DTOs
@inject ITranslationsService TranslationsService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<PageTitle>Translations - Amesa Admin</PageTitle>

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h1 class="display-5">
                <i class="fas fa-language"></i> Translations Management
            </h1>
            <p class="text-muted">Manage translation keys and values</p>
        </div>
    </div>

    <!-- Filters -->
    <div class="card mb-4">
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-3">
                    <label class="form-label">Language</label>
                    <select class="form-select" @bind="languageFilter">
                        <option value="">All Languages</option>
                        @if (languages != null)
                        {
                            @foreach (var lang in languages)
                            {
                                <option value="@lang">@lang.ToUpper()</option>
                            }
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Category</label>
                    <select class="form-select" @bind="categoryFilter">
                        <option value="">All Categories</option>
                        @if (categories != null)
                        {
                            @foreach (var cat in categories)
                            {
                                <option value="@cat">@cat</option>
                            }
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Search</label>
                    <input type="text" class="form-control" @bind="searchTerm" @bind:event="oninput" 
                           placeholder="Search key or value..." />
                </div>
                <div class="col-md-1">
                    <label class="form-label">Page Size</label>
                    <select class="form-select" @bind="pageSize">
                        <option value="20">20</option>
                        <option value="50">50</option>
                        <option value="100">100</option>
                    </select>
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button class="btn btn-secondary w-100" @onclick="LoadTranslations">
                        <i class="fas fa-search"></i> Search
                    </button>
                </div>
            </div>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (translations?.Items?.Any() == true)
    {
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Key</th>
                                <th>Language</th>
                                <th>Category</th>
                                <th>Value</th>
                                <th>Updated</th>
                                <th>Created</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var translation in translations.Items)
                            {
                                <tr>
                                    <td><code>@translation.Key</code></td>
                                    <td>
                                        <span class="badge bg-primary">@translation.LanguageCode.ToUpper()</span>
                                    </td>
                                    <td>
                                        <span class="badge bg-secondary">@translation.Category</span>
                                    </td>
                                    <td>@translation.Value</td>
                                    <td>@translation.UpdatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                                    <td>@translation.CreatedAt.ToString("yyyy-MM-dd")</td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <button class="btn btn-outline-primary" @onclick="() => ShowEditModal(translation)" title="Edit">
                                                <i class="fas fa-edit"></i>
                                            </button>
                                            <button class="btn btn-outline-danger" @onclick="() => ShowDeleteModal(translation)" title="Delete">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                @if (translations.TotalPages > 1)
                {
                    <nav>
                        <ul class="pagination justify-content-center">
                            <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                                <button class="page-link" @onclick="() => ChangePage(currentPage - 1)">Previous</button>
                            </li>
                            @for (int i = 1; i <= translations.TotalPages; i++)
                            {
                                <li class="page-item @(i == currentPage ? "active" : "")">
                                    <button class="page-link" @onclick="() => ChangePage(i)">@i</button>
                                </li>
                            }
                            <li class="page-item @(currentPage == translations.TotalPages ? "disabled" : "")">
                                <button class="page-link" @onclick="() => ChangePage(currentPage + 1)">Next</button>
                            </li>
                        </ul>
                    </nav>
                }

                <div class="text-muted text-center mt-3">
                    Showing @((currentPage - 1) * pageSize + 1) to @(Math.Min(currentPage * pageSize, translations.TotalCount)) of @translations.TotalCount translations
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle"></i> No translations found.
        </div>
    }
</div>

@code {
    private PagedResult<TranslationDto>? translations;
    private List<string>? languages;
    private List<string>? categories;
    private bool isLoading = true;
    private int currentPage = 1;
    private int pageSize = 50;
    private string? languageFilter;
    private string? categoryFilter;
    private string? searchTerm;

    protected override async Task OnInitializedAsync()
    {
        await LoadLanguagesAndCategories();
        await LoadTranslations();
    }

    private async Task LoadLanguagesAndCategories()
    {
        try
        {
            languages = await TranslationsService.GetLanguagesAsync();
            categories = await TranslationsService.GetCategoriesAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading languages/categories: {ex.Message}");
        }
    }

    private async Task LoadTranslations()
    {
        isLoading = true;
        try
        {
            translations = await TranslationsService.GetTranslationsAsync(
                currentPage, 
                pageSize, 
                string.IsNullOrWhiteSpace(languageFilter) ? null : languageFilter,
                string.IsNullOrWhiteSpace(categoryFilter) ? null : categoryFilter,
                string.IsNullOrWhiteSpace(searchTerm) ? null : searchTerm);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading translations: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task ChangePage(int page)
    {
        currentPage = page;
        await LoadTranslations();
    }

    private void ShowCreateModal()
    {
        isEditing = false;
        editKey = string.Empty;
        editLanguageCode = string.Empty;
        editCategory = string.Empty;
        editValue = string.Empty;
        showTranslationModal = true;
    }

    private void ShowEditModal(TranslationDto translation)
    {
        isEditing = true;
        editKey = translation.Key;
        editLanguageCode = translation.LanguageCode;
        editCategory = translation.Category;
        editValue = translation.Value;
        showTranslationModal = true;
    }

    private void CloseTranslationModal()
    {
        showTranslationModal = false;
        isEditing = false;
        editKey = string.Empty;
        editLanguageCode = string.Empty;
        editCategory = string.Empty;
        editValue = string.Empty;
    }

    private async Task SaveTranslation()
    {
        if (string.IsNullOrWhiteSpace(editKey) || string.IsNullOrWhiteSpace(editLanguageCode) || string.IsNullOrWhiteSpace(editValue))
        {
            await JSRuntime.InvokeVoidAsync("alert", "Please fill in all required fields.");
            return;
        }

        isSaving = true;
        try
        {
            if (isEditing)
            {
                var updateRequest = new UpdateTranslationRequest
                {
                    Value = editValue,
                    Category = string.IsNullOrWhiteSpace(editCategory) ? null : editCategory
                };
                await TranslationsService.UpdateTranslationAsync(editKey, editLanguageCode, updateRequest);
                await JSRuntime.InvokeVoidAsync("alert", "Translation updated successfully!");
            }
            else
            {
                var createRequest = new CreateTranslationRequest
                {
                    Key = editKey,
                    LanguageCode = editLanguageCode,
                    Category = string.IsNullOrWhiteSpace(editCategory) ? "common" : editCategory,
                    Value = editValue
                };
                await TranslationsService.CreateTranslationAsync(createRequest);
                await JSRuntime.InvokeVoidAsync("alert", "Translation created successfully!");
            }
            CloseTranslationModal();
            await LoadLanguagesAndCategories(); // Refresh languages/categories in case new ones were added
            await LoadTranslations(); // Refresh the list
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error saving translation: {ex.Message}");
            await JSRuntime.InvokeVoidAsync("alert", $"Error saving translation: {ex.Message}");
        }
        finally
        {
            isSaving = false;
        }
    }

    private void ShowDeleteModal(TranslationDto translation)
    {
        deleteKey = translation.Key;
        deleteLanguageCode = translation.LanguageCode;
        deleteValue = translation.Value;
        showDeleteModal = true;
    }

    private void CloseDeleteModal()
    {
        showDeleteModal = false;
        deleteKey = string.Empty;
        deleteLanguageCode = string.Empty;
        deleteValue = string.Empty;
    }

    private async Task ConfirmDelete()
    {
        if (string.IsNullOrWhiteSpace(deleteKey) || string.IsNullOrWhiteSpace(deleteLanguageCode))
            return;

        isDeleting = true;
        try
        {
            await TranslationsService.DeleteTranslationAsync(deleteKey, deleteLanguageCode);
            await JSRuntime.InvokeVoidAsync("alert", "Translation deleted successfully!");
            CloseDeleteModal();
            await LoadTranslations(); // Refresh the list
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error deleting translation: {ex.Message}");
            await JSRuntime.InvokeVoidAsync("alert", $"Error deleting translation: {ex.Message}");
        }
        finally
        {
            isDeleting = false;
        }
    }
}
