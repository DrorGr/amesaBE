@page "/payments"
@inherits AuthorizedPageBase
@using AmesaBackend.Admin.Services
@using AmesaBackend.Admin.DTOs
@inject IPaymentsService PaymentsService
@inject NavigationManager Navigation

<PageTitle>Payments - Amesa Admin</PageTitle>

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h1 class="display-5">
                <i class="fas fa-euro-sign"></i> Payments Management
            </h1>
            <p class="text-muted">View and manage payment transactions</p>
        </div>
    </div>

    <!-- Filters -->
    <div class="card mb-4">
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-3">
                    <label class="form-label">Status</label>
                    <select class="form-select" @bind="statusFilter">
                        <option value="">All Statuses</option>
                        <option value="Pending">Pending</option>
                        <option value="Completed">Completed</option>
                        <option value="Failed">Failed</option>
                        <option value="Refunded">Refunded</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Type</label>
                    <select class="form-select" @bind="typeFilter">
                        <option value="">All Types</option>
                        <option value="Payment">Payment</option>
                        <option value="Refund">Refund</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label">Page Size</label>
                    <select class="form-select" @bind="pageSize">
                        <option value="10">10</option>
                        <option value="20">20</option>
                        <option value="50">50</option>
                    </select>
                </div>
                <div class="col-md-3 d-flex align-items-end">
                    <button class="btn btn-secondary w-100" @onclick="LoadTransactions">
                        <i class="fas fa-search"></i> Search
                    </button>
                </div>
            </div>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (transactions?.Items?.Any() == true)
    {
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Transaction ID</th>
                                <th>User ID</th>
                                <th>Type</th>
                                <th>Amount</th>
                                <th>Currency</th>
                                <th>Status</th>
                                <th>Description</th>
                                <th>Reference ID</th>
                                <th>Processed At</th>
                                <th>Created</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var transaction in transactions.Items)
                            {
                                <tr>
                                    <td>@transaction.Id.ToString().Substring(0, 8)...</td>
                                    <td>@transaction.UserId.ToString().Substring(0, 8)...</td>
                                    <td>
                                        <span class="badge bg-@GetTypeBadgeClass(transaction.Type)">@transaction.Type</span>
                                    </td>
                                    <td><strong>@transaction.Currency @transaction.Amount.ToString("F2")</strong></td>
                                    <td>@transaction.Currency</td>
                                    <td>
                                        <span class="badge bg-@GetStatusBadgeClass(transaction.Status)">@transaction.Status</span>
                                    </td>
                                    <td>@(transaction.Description ?? "-")</td>
                                    <td>@(transaction.ReferenceId ?? "-")</td>
                                    <td>
                                        @if (transaction.ProcessedAt.HasValue)
                                        {
                                            @transaction.ProcessedAt.Value.ToString("yyyy-MM-dd HH:mm")
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>@transaction.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                @if (transactions.TotalPages > 1)
                {
                    <nav>
                        <ul class="pagination justify-content-center">
                            <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                                <button class="page-link" @onclick="() => ChangePage(currentPage - 1)">Previous</button>
                            </li>
                            @for (int i = 1; i <= transactions.TotalPages; i++)
                            {
                                <li class="page-item @(i == currentPage ? "active" : "")">
                                    <button class="page-link" @onclick="() => ChangePage(i)">@i</button>
                                </li>
                            }
                            <li class="page-item @(currentPage == transactions.TotalPages ? "disabled" : "")">
                                <button class="page-link" @onclick="() => ChangePage(currentPage + 1)">Next</button>
                            </li>
                        </ul>
                    </nav>
                }

                <div class="text-muted text-center mt-3">
                    Showing @((currentPage - 1) * pageSize + 1) to @(Math.Min(currentPage * pageSize, transactions.TotalCount)) of @transactions.TotalCount transactions
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle"></i> No transactions found.
        </div>
    }
</div>

@code {
    private PagedResult<TransactionDto>? transactions;
    private bool isLoading = true;
    private int currentPage = 1;
    private int pageSize = 20;
    private string? statusFilter;
    private string? typeFilter;

    protected override async Task OnInitializedAsync()
    {
        await LoadTransactions();
    }

    private async Task LoadTransactions()
    {
        isLoading = true;
        try
        {
            transactions = await PaymentsService.GetTransactionsAsync(currentPage, pageSize, null, statusFilter, typeFilter);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading transactions: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task ChangePage(int page)
    {
        currentPage = page;
        await LoadTransactions();
    }

    private string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "Pending" => "warning",
            "Completed" => "success",
            "Failed" => "danger",
            "Refunded" => "info",
            _ => "secondary"
        };
    }

    private string GetTypeBadgeClass(string type)
    {
        return type switch
        {
            "Payment" => "primary",
            "Refund" => "warning",
            _ => "secondary"
        };
    }
}
