@page "/payments"
@inherits AuthorizedPageBase
@using AmesaBackend.Admin.Services
@using AmesaBackend.Admin.DTOs
@inject IPaymentsService PaymentsService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<PageTitle>Payments - Amesa Admin</PageTitle>

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h1 class="display-5">
                <i class="fas fa-euro-sign"></i> Payments Management
            </h1>
            <p class="text-muted">View and manage payment transactions</p>
        </div>
    </div>

    <!-- Filters -->
    <div class="card mb-4">
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-2">
                    <label class="form-label">User ID</label>
                    <input type="text" class="form-control" @bind="userIdFilter" placeholder="User ID (UUID)" />
                </div>
                <div class="col-md-2">
                    <label class="form-label">Status</label>
                    <select class="form-select" @bind="statusFilter">
                        <option value="">All Statuses</option>
                        <option value="Pending">Pending</option>
                        <option value="Completed">Completed</option>
                        <option value="Failed">Failed</option>
                        <option value="Refunded">Refunded</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label">Type</label>
                    <select class="form-select" @bind="typeFilter">
                        <option value="">All Types</option>
                        <option value="Payment">Payment</option>
                        <option value="Refund">Refund</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label">Page Size</label>
                    <select class="form-select" @bind="pageSize">
                        <option value="10">10</option>
                        <option value="20">20</option>
                        <option value="50">50</option>
                    </select>
                </div>
                <div class="col-md-3 d-flex align-items-end">
                    <button class="btn btn-secondary w-100" @onclick="LoadTransactions">
                        <i class="fas fa-search"></i> Search
                    </button>
                </div>
            </div>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (transactions?.Items?.Any() == true)
    {
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Transaction ID</th>
                                <th>User ID</th>
                                <th>Type</th>
                                <th>Amount</th>
                                <th>Currency</th>
                                <th>Status</th>
                                <th>Description</th>
                                <th>Reference ID</th>
                                <th>Processed At</th>
                                <th>Created</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var transaction in transactions.Items)
                            {
                                <tr>
                                    <td>@(transaction.Id.ToString().Substring(0, 8) + "...")</td>
                                    <td>@(transaction.UserId.ToString().Substring(0, 8) + "...")</td>
                                    <td>
                                        <span class="badge bg-@GetTypeBadgeClass(transaction.Type)">@transaction.Type</span>
                                    </td>
                                    <td><strong>@transaction.Currency @transaction.Amount.ToString("F2")</strong></td>
                                    <td>@transaction.Currency</td>
                                    <td>
                                        <span class="badge bg-@GetStatusBadgeClass(transaction.Status)">@transaction.Status</span>
                                    </td>
                                    <td>@(transaction.Description ?? "-")</td>
                                    <td>@(transaction.ReferenceId ?? "-")</td>
                                    <td>
                                        @if (transaction.ProcessedAt.HasValue)
                                        {
                                            @transaction.ProcessedAt.Value.ToString("yyyy-MM-dd HH:mm")
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>@transaction.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                                    <td>
                                        @if (transaction.Status == "Completed" && transaction.Type == "Payment")
                                        {
                                            <button class="btn btn-sm btn-warning" @onclick="() => ShowRefundModal(transaction)" title="Refund">
                                                <i class="fas fa-undo"></i> Refund
                                            </button>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                @if (transactions.TotalPages > 1)
                {
                    <nav>
                        <ul class="pagination justify-content-center">
                            <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                                <button class="page-link" @onclick="() => ChangePage(currentPage - 1)">Previous</button>
                            </li>
                            @for (int i = 1; i <= transactions.TotalPages; i++)
                            {
                                <li class="page-item @(i == currentPage ? "active" : "")">
                                    <button class="page-link" @onclick="() => ChangePage(i)">@i</button>
                                </li>
                            }
                            <li class="page-item @(currentPage == transactions.TotalPages ? "disabled" : "")">
                                <button class="page-link" @onclick="() => ChangePage(currentPage + 1)">Next</button>
                            </li>
                        </ul>
                    </nav>
                }

                <div class="text-muted text-center mt-3">
                    Showing @((currentPage - 1) * pageSize + 1) to @(Math.Min(currentPage * pageSize, transactions.TotalCount)) of @transactions.TotalCount transactions
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle"></i> No transactions found.
        </div>
    }
</div>

<!-- Refund Confirmation Modal -->
@if (showRefundModal)
{
    <div class="modal fade show" style="display: block;" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Refund Transaction</h5>
                    <button type="button" class="btn-close" @onclick="CloseRefundModal"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to refund this transaction?</p>
                    <div class="alert alert-info">
                        <strong>Transaction ID:</strong> @refundTransactionId<br />
                        <strong>Amount:</strong> @refundCurrency @refundAmount.ToString("F2")<br />
                        <strong>User ID:</strong> @(refundUserId.ToString().Substring(0, 8) + "...")
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Refund Amount (leave empty for full refund)</label>
                        <input type="number" class="form-control" step="0.01" min="0" @bind="refundAmountInput" />
                        <small class="text-muted">Enter amount to partially refund, or leave empty for full refund of @refundCurrency @refundAmount.ToString("F2")</small>
                    </div>
                    <p class="text-warning"><strong>This action will create a refund transaction.</strong></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseRefundModal">Cancel</button>
                    <button type="button" class="btn btn-warning" @onclick="ConfirmRefund" disabled="@isRefunding">
                        @if (isRefunding)
                        {
                            <span class="spinner-border spinner-border-sm me-2"></span>
                        }
                        <i class="fas fa-undo"></i> Refund
                    </button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-backdrop fade show"></div>
}

@code {
    private PagedResult<TransactionDto>? transactions;
    private bool isLoading = true;
    private int currentPage = 1;
    private int pageSize = 20;
    private string? statusFilter;
    private string? typeFilter;
    private string? userIdFilter;

    // Refund modal state
    private bool showRefundModal = false;
    private bool isRefunding = false;
    private Guid refundTransactionId;
    private Guid refundUserId;
    private decimal refundAmount;
    private string refundCurrency = string.Empty;
    private decimal? refundAmountInput;

    protected override async Task OnInitializedAsync()
    {
        await LoadTransactions();
    }

    private async Task LoadTransactions()
    {
        isLoading = true;
        try
        {
            Guid? userId = null;
            if (!string.IsNullOrWhiteSpace(userIdFilter) && Guid.TryParse(userIdFilter, out var parsedUserId))
            {
                userId = parsedUserId;
            }
            transactions = await PaymentsService.GetTransactionsAsync(currentPage, pageSize, userId, statusFilter, typeFilter);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading transactions: {ex.Message}");
            await JSRuntime.InvokeVoidAsync("alert", $"Error loading transactions: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task ChangePage(int page)
    {
        currentPage = page;
        await LoadTransactions();
    }

    private string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "Pending" => "warning",
            "Completed" => "success",
            "Failed" => "danger",
            "Refunded" => "info",
            _ => "secondary"
        };
    }

    private string GetTypeBadgeClass(string type)
    {
        return type switch
        {
            "Payment" => "primary",
            "Refund" => "warning",
            _ => "secondary"
        };
    }

    private void ShowRefundModal(TransactionDto transaction)
    {
        refundTransactionId = transaction.Id;
        refundUserId = transaction.UserId;
        refundAmount = transaction.Amount;
        refundCurrency = transaction.Currency;
        refundAmountInput = null; // Default to full refund
        showRefundModal = true;
    }

    private void CloseRefundModal()
    {
        showRefundModal = false;
        refundTransactionId = Guid.Empty;
        refundUserId = Guid.Empty;
        refundAmount = 0;
        refundCurrency = string.Empty;
        refundAmountInput = null;
    }

    private async Task ConfirmRefund()
    {
        isRefunding = true;
        try
        {
            // If amount is specified and valid, use it; otherwise use null for full refund
            decimal? refundAmountToUse = null;
            if (refundAmountInput.HasValue && refundAmountInput.Value > 0 && refundAmountInput.Value <= refundAmount)
            {
                refundAmountToUse = refundAmountInput.Value;
            }
            else if (refundAmountInput.HasValue && refundAmountInput.Value > refundAmount)
            {
                await JSRuntime.InvokeVoidAsync("alert", $"Refund amount cannot exceed the original transaction amount of {refundCurrency} {refundAmount:F2}");
                return;
            }

            await PaymentsService.RefundTransactionAsync(refundTransactionId, refundAmountToUse);
            await JSRuntime.InvokeVoidAsync("alert", "Transaction refunded successfully!");
            CloseRefundModal();
            await LoadTransactions(); // Refresh the list
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error refunding transaction: {ex.Message}");
            await JSRuntime.InvokeVoidAsync("alert", $"Error refunding transaction: {ex.Message}");
        }
        finally
        {
            isRefunding = false;
        }
    }
}
