{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": ""
  },
  "EventBridge": {
    "EventBusName": "amesa-event-bus",
    "Source": "amesa.notification-service",
    "AllowedSources": [
      "amesa.auth",
      "amesa.lottery",
      "amesa.payment",
      "amesa.content",
      "amesa.notification-service"
    ],
    "RateLimit": {
      "MaxRequests": 100,
      "WindowMinutes": 1
    }
  },
  "JwtSettings": {
    "SecretKey": "",
    "Issuer": "AmesaAuthService",
    "Audience": "AmesaFrontend"
  },
  "EmailSettings": {
    "SmtpHost": "",
    "SmtpPort": 587,
    "SmtpUsername": "",
    "SmtpPassword": "",
    "FromEmail": "noreply@amesa.com",
    "FromName": "Amesa Lottery"
  },
  "NotificationChannels": {
    "Email": {
      "Provider": "AWS_SES",
      "Region": "eu-north-1",
      "FromEmail": "noreply@amesa.com",
      "FromName": "Amesa Lottery",
      "ConfigurationSet": "amesa-email-config"
    },
    "SMS": {
      "Provider": "AWS_SNS",
      "Region": "eu-north-1",
      "SenderId": "Amesa",
      "MaxLength": 160
    },
    "Push": {
      "Provider": "AWS_SNS",
      "PlatformApplications": {
        "Android": "arn:aws:sns:eu-north-1:...:fcm/amesa-android",
        "iOS": "arn:aws:sns:eu-north-1:...:apns/amesa-ios"
      }
    },
    "WebPush": {
      "Provider": "WebPush",
      "VapidPublicKey": "FROM_SECRETS",
      "VapidPrivateKey": "FROM_SECRETS",
      "VapidSubject": "mailto:noreply@amesa.com"
    },
    "Telegram": {
      "Provider": "Telegram_Bot_API",
      "BotToken": "FROM_SECRETS",
      "WebhookUrl": "https://api.amesa.com/api/v1/notifications/telegram/webhook"
    },
    "SocialMedia": {
      "Instagram": {
        "Provider": "Meta_Graph_API",
        "AppId": "FROM_SECRETS",
        "AppSecret": "FROM_SECRETS",
        "AccessToken": "FROM_SECRETS"
      },
      "Facebook": {
        "Provider": "Meta_Graph_API",
        "AppId": "FROM_SECRETS",
        "AppSecret": "FROM_SECRETS",
        "PageId": "FROM_SECRETS"
      }
    }
  },
  "Services": {
    "AuthService": {
      "Url": "http://amesa-auth-service:8080"
    },
    "LotteryService": {
      "Url": "http://amesa-lottery-service:8080"
    },
    "ContentService": {
      "Url": "http://amesa-content-service:8080"
    }
  },
  "NotificationQueue": {
    "SqsQueueUrl": "FROM_SECRETS",
    "DeadLetterQueueUrl": "FROM_SECRETS",
    "MaxReceiveCount": 3,
    "Region": "eu-north-1",
    "MaxRetries": 3,
    "VisibilityTimeout": 60
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information"
    },
    "WriteTo": [
      { "Name": "Console" },
      { "Name": "File", "Args": { "path": "logs/notification-.txt", "rollingInterval": "Day" } }
    ]
  },
  "AllowedOrigins": [
    "https://dpqbvdgnenckf.cloudfront.net",
    "http://localhost:4200"
  ]
}

