{
  "family": "amesa-notification-service",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::129394705401:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::129394705401:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "amesa-notification-service-container",
      "image": "129394705401.dkr.ecr.eu-north-1.amazonaws.com/amesa-notification-service:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8080,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "ASPNETCORE_ENVIRONMENT",
          "value": "Production"
        },
        {
          "name": "ASPNETCORE_URLS",
          "value": "http://+:8080"
        }
      ],
      "secrets": [
        {
          "name": "JwtSettings__SecretKey",
          "valueFrom": "/amesa/prod/JwtSettings/SecretKey"
        },
        {
          "name": "ConnectionStrings__DefaultConnection",
          "valueFrom": "/amesa/prod/ConnectionStrings/Notification"
        },
        {
          "name": "ConnectionStrings__Redis",
          "valueFrom": "/amesa/prod/ConnectionStrings/Redis"
        },
        {
          "name": "EmailSettings__SmtpHost",
          "valueFrom": "/amesa/prod/EmailSettings/SmtpHost"
        },
        {
          "name": "EmailSettings__SmtpPort",
          "valueFrom": "/amesa/prod/EmailSettings/SmtpPort"
        },
        {
          "name": "EmailSettings__SmtpUsername",
          "valueFrom": "/amesa/prod/EmailSettings/SmtpUsername"
        },
        {
          "name": "EmailSettings__SmtpPassword",
          "valueFrom": "/amesa/prod/EmailSettings/SmtpPassword"
        },
        {
          "name": "Services__AuthService__Url",
          "valueFrom": "/amesa/prod/Services/AuthService/Url"
        },
        {
          "name": "Services__LotteryService__Url",
          "valueFrom": "/amesa/prod/Services/LotteryService/Url"
        },
        {
          "name": "NotificationChannels__Push__PlatformApplications__Android",
          "valueFrom": "/amesa/prod/NotificationChannels/Push/AndroidPlatformArn"
        },
        {
          "name": "NotificationChannels__Push__PlatformApplications__iOS",
          "valueFrom": "/amesa/prod/NotificationChannels/Push/iOSPlatformArn"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/amesa-notification-service",
          "awslogs-region": "eu-north-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": ["CMD-SHELL", "curl -f http://localhost:8080/health || exit 1"],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ]
}

