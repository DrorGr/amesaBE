{
  "family": "amesa-auth-service",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::129394705401:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::129394705401:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "amesa-auth-service-container",
      "image": "129394705401.dkr.ecr.eu-north-1.amazonaws.com/amesa-auth-service:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8080,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "ASPNETCORE_ENVIRONMENT",
          "value": "Production"
        },
        {
          "name": "ASPNETCORE_URLS",
          "value": "http://+:8080"
        },
        {
          "name": "GOOGLE_APPLICATION_CREDENTIALS",
          "value": "/tmp/google-service-account.json"
        }
      ],
      "secrets": [
        {
          "name": "ConnectionStrings__DefaultConnection",
          "valueFrom": "/amesa/prod/ConnectionStrings/Auth"
        },
        {
          "name": "GOOGLE_SERVICE_ACCOUNT_JSON",
          "valueFrom": "arn:aws:secretsmanager:eu-north-1:129394705401:secret:amesa-google-recaptcha-service-account-4Xho7p"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/amesa-auth-service",
          "awslogs-region": "eu-north-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:8080/health || exit 1"
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ]
}

