# Amesa Backend Environment Configuration
# Copy this file to .env and update with your actual values

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=YOUR_ACCOUNT_ID

# Database Configuration (Aurora PostgreSQL)
DB_HOST=YOUR_AURORA_CLUSTER_ENDPOINT
DB_NAME=amesa_lottery
DB_USER=amesa_user
DB_PASSWORD=YOUR_SECURE_DB_PASSWORD
DB_PORT=5432

# Redis Configuration (ElastiCache)
REDIS_CONNECTION_STRING=YOUR_ELASTICACHE_ENDPOINT:6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET_KEY=YOUR_SUPER_SECRET_JWT_KEY_AT_LEAST_32_CHARACTERS_LONG
JWT_ISSUER=AmesaLottery
JWT_AUDIENCE=AmesaLotteryUsers

# Application URLs
FRONTEND_URL=https://amesa.com
FRONTEND_URL_WWW=https://www.amesa.com
API_URL=https://api.amesa.com

# Email Configuration (SMTP)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=YOUR_SMTP_USERNAME
SMTP_PASSWORD=YOUR_SMTP_PASSWORD
FROM_EMAIL=noreply@amesa.com
FROM_NAME=Amesa Lottery

# Payment Configuration
# Stripe
STRIPE_PUBLISHABLE_KEY=pk_live_YOUR_STRIPE_PUBLISHABLE_KEY
STRIPE_SECRET_KEY=sk_live_YOUR_STRIPE_SECRET_KEY
STRIPE_WEBHOOK_SECRET=whsec_YOUR_STRIPE_WEBHOOK_SECRET

# PayPal
PAYPAL_CLIENT_ID=YOUR_PAYPAL_CLIENT_ID
PAYPAL_CLIENT_SECRET=YOUR_PAYPAL_CLIENT_SECRET
PAYPAL_ENVIRONMENT=production

# AWS S3 Configuration
FILE_STORAGE_PROVIDER=AWS
AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY_ID
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_ACCESS_KEY
AWS_S3_BUCKET=YOUR_S3_BUCKET_NAME

# QR Code Configuration
QR_CODE_SECRET_KEY=YOUR_QR_CODE_SECRET_KEY_CHANGE_THIS_IN_PRODUCTION

# Application Environment
ASPNETCORE_ENVIRONMENT=Production