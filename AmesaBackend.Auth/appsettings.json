{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": ""
  },
  "JwtSettings": {
    "SecretKey": "",
    "Issuer": "AmesaAuthService",
    "Audience": "AmesaFrontend",
    "ExpiryInMinutes": "60",
    "RefreshTokenExpiryInDays": "7",
    "RememberMeExpiryInDays": "30"
  },
  "Authentication": {
    "Google": {
      "ClientId": "",
      "ClientSecret": "",
      "SecretId": "amesa-google_people_API"
    },
    "Meta": {
      "AppId": "",
      "AppSecret": "",
      "SecretId": "amesa-meta-oauth"
    }
  },
  "FrontendUrl": "https://dpqbvdgnenckf.cloudfront.net",
  "AllowedOrigins": [
    "https://dpqbvdgnenckf.cloudfront.net",
    "http://localhost:4200"
  ],
  "EventBridge": {
    "EventBusName": "amesa-event-bus",
    "Source": "amesa.auth-service"
  },
  "ConnectionStrings": {
    "Redis": ""
  },
  "CacheConfig": {
    "RedisConnection": "",
    "InstanceName": "amesa-auth",
    "UseSSL": false
  },
  "XRay": {
    "ServiceName": "amesa-auth-service",
    "Enabled": true
  },
  "AdminSettings": {
    "Email": "admin@amesa.com",
    "Password": "Admin123!"
  },
  "Aws": {
    "Region": "eu-north-1"
  },
  "SecuritySettings": {
    "EmailVerificationTokenExpiryHours": 24,
    "AccountLockoutFailClosed": false,
    "RateLimitFailClosed": false,
    "RequireOriginHeader": true,
    "OAuthTokenCacheExpirationMinutes": 5,
    "AccountLockout": {
      "MaxFailedAttempts": 5,
      "LockoutDurationMinutes": 30,
      "AttemptWindowMinutes": 15
    },
    "PasswordReset": {
      "TokenExpiryHours": 1
    },
    "Session": {
      "MaxActiveSessions": 5
    },
    "PasswordHistory": {
      "CheckLastPasswords": 5,
      "KeepLastPasswords": 5,
      "CleanupIntervalHours": 24
    },
    "PasswordBreachCheck": {
      "Enabled": true,
      "BlockBreachedPasswords": false,
      "TimeoutSeconds": 5,
      "RetryCount": 3
    },
    "AccountDeletion": {
      "GracePeriodDays": 30,
      "AnonymizeData": true
    },
    "RefreshTokenRotation": {
      "Enabled": true,
      "InvalidateOnReuse": true
    },
    "Jwt": {
      "ClockSkewMinutes": 5
    },
    "TwoFactorIssuer": "Amesa"
  },
  "CircuitBreaker": {
    "FailureThreshold": 5,
    "DurationOfBreak": 30,
    "SamplingDuration": 30
  },
  "NotificationService": {
    "BaseUrl": "http://amesa-backend-alb-509078867.eu-north-1.elb.amazonaws.com"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/auth-.txt",
          "rollingInterval": "Day"
        }
      }
    ],
    "Enrich": [ "FromLogContext" ]
  }
}

